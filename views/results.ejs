<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width,initial-scale=1.0"/>
        <meta http-equiv="X-UA-COMPATIBLE" content="ie=edge"/>
        <title>JavaScript Quizzes | <%= title %></title>
        <link rel="stylesheet" type="text/css" href="/style.css" media="screen"/>
        <script src="https://kit.fontawesome.com/4f18e4f9dd.js"></script>
    </head>
    <body>
        <nav class="nav">
            <div class="nav__part-one">
                <div class="nav__logo-box">
                    <a class="nav__logo">JavaScript Quizzes</a>
                </div>
                <i class="nav__togglecon fa fa-bars"></i>
            </div>
            <div class="nav__part-two">
                <a class="nav__link">Login</a>
                <a class="nav__link">Register</a>
            </div>
        </nav>
        <main>
            <div class="test-container">
                <h1>Results</h1>
                <% for(result of results){ %>

                    <div class="result-tile">
                        <div class="result-tile__question">
                            <%- result.question %>
                        </div>
                        <div class="result-tile__correct-answer">
                            <strong>Correct Answer:</strong> 
                            <div>
                            <%- result.correctAnswer %>
                            </div>
                        </div>
                        <div class="result-tile__user-answer">
                            <strong>Your Answer:</strong>
                            <div>
                            <%- result.userAnswer %>
                            </div>
                        </div>
                        <div class="result-tile__status">
                            <strong><%- result.score %></strong>
                        </div>
                    </div>


                <% } %>
            </div>
        </main>
    </body>
</html>